{
  "description": "Intelligent development automation: quality checks, auto-formatting, git checkpointing, safety validations, observability tracking, and CLAUDE.md management",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-dependencies.py",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/observability-tracker.py",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Validate Bash command safety. Block (return 'deny') if the command contains dangerous rm patterns: 'rm -rf *', 'rm -rf /', 'rm -rf ~', 'sudo rm', or any recursive deletion that could destroy important data. Otherwise return 'allow'. Command to validate: $TOOL_INPUT",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/auto-format.py",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/observability-tracker.py",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/observability-tracker.py",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/quality-check.py",
            "timeout": 90
          },
          {
            "type": "prompt",
            "prompt": "Use the Task tool to launch a subagent for CLAUDE.md updates. Subagent type: 'general-purpose'. Description: 'Update CLAUDE.md with learnings'. Task: 'Analyze this session - what was discovered? Update CLAUDE.md ONLY with valuable, project-specific learnings (commands used, gotchas found, non-obvious patterns). Follow skills/claude-md-manager/references/update-guidelines.md. Skip if nothing significant. Every line must earn its place.'",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/git-checkpoint.py",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/notify-completion.py",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/observability-tracker.py",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
