{
  "description": "Intelligent development automation: quality checks, auto-formatting, git checkpointing, safety validations, observability tracking, and CLAUDE.md management",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Validate Bash command safety. Block (return 'deny') if the command contains dangerous rm patterns: 'rm -rf *', 'rm -rf /', 'rm -rf ~', 'sudo rm', or any recursive deletion that could destroy important data. Otherwise return 'allow'. Command to validate: $TOOL_INPUT",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --quiet ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/auto-format.py",
            "timeout": 30
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --quiet ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/quality-check.py",
            "timeout": 90
          },
          {
            "type": "command",
            "command": "uv run --quiet ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/git-checkpoint.py",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "uv run --quiet ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/notify-completion.py",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "uv run --quiet ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/langfuse-transcript-sync.py",
            "async": true,
            "timeout": 10
          },
          {
            "type": "command",
            "command": "uv run --quiet ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/claude-md-async.py",
            "async": true,
            "timeout": 5
          }
        ]
      }
    ]
  }
}
